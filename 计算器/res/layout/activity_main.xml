<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.day0000.MainActivity"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/window"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="@drawable/window"
        android:textSize="20dp"
        android:gravity="right|bottom"
        android:padding="8dp"
        android:singleLine="true"
		android:text="0"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="5"
       android:orientation="vertical"
       android:layout_below="@id/window">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="1">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/c"
            android:layout_below="@+id/window"
            android:src="@drawable/c"
            android:onClick="doClick"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/del"
            android:src="@drawable/del"
            android:onClick="doClick"/>
        <ImageView
            android:id="@+id/btn_div"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_div"
            android:onClick="doClick" />
        <ImageView
            android:id="@+id/btn_mul"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_mul"
            android:onClick="doClick" />


    </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:orientation="horizontal">
         <ImageView
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:id="@+id/btn1"
             android:src="@drawable/btn1"
             android:onClick="doClick"/>
         <ImageView
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:id="@+id/btn2"
             android:src="@drawable/btn2"
             android:onClick="doClick"/>
         <ImageView
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:id="@+id/btn3"
             android:src="@drawable/btn3"
             android:onClick="doClick"/>
         <ImageView
             android:layout_width="0dp"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:id="@+id/btn_sub"
             android:src="@drawable/btn_sub"
             android:onClick="doClick"/>
     </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:orientation="horizontal">
           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:id="@+id/btn4"
               android:src="@drawable/btn4"
               android:onClick="doClick"/>
           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:id="@+id/btn5"
               android:src="@drawable/btn5"
               android:onClick="doClick"/>
           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:id="@+id/btn6"
               android:src="@drawable/btn6"
               android:onClick="doClick"/>
           <ImageView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:id="@+id/btn_add"
               android:src="@drawable/btn_add"
               android:onClick="doClick"/>
       </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2"
           android:orientation="horizontal">
           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="3"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:orientation="horizontal"
                   android:layout_weight="1">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/btn7"
                       android:src="@drawable/btn7"
                       android:onClick="doClick"/>
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/btn8"
                       android:src="@drawable/btn8"
                       android:onClick="doClick"/>

                   <ImageView
                       android:id="@+id/btn9"
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:onClick="doClick"
                       android:src="@drawable/btn9" />

               </LinearLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="1"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="2"
                       android:scaleType="fitXY"
                       android:paddingLeft="15dp"
                       android:paddingRight="15dp"
                       android:id="@+id/btn0"
                       android:src="@drawable/btn0"
                       android:onClick="doClick"/>
                   <ImageView
                       android:layout_width="0dp"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:id="@+id/btn_dot"
                       android:src="@drawable/dot"
                       android:onClick="doClick"/>
               </LinearLayout>
           </LinearLayout>

           <ImageView
               android:id="@+id/btn_equ"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1"
               android:onClick="doClick"
               android:src="@drawable/btn_equ" />

       </LinearLayout>


   </LinearLayout>

</LinearLayout>
